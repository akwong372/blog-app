<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label class="inputLabels" for="newPostTitleInput">Title</label>
        <input class="form-control" type="text" name="newPostTitle" id="newPostTitleInput">
    </div>

    <div class="form-group">
        <label class="inputLabels" for="newPostContentInput">Post</label>
        <textarea class="form-control" name="newPostContent" id="newPostContentInput" cols="30" rows="10"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer") %>